@model GameManagementMvc.Models.Company

@{
    ViewData["Title"] = "Edit Company";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</p>

<hr />

<div class="row">
    <div class="col-3">
        @if (String.IsNullOrEmpty(Model.Image))
        {
        <img src="~/img/default.png" alt="No image" class="img-thumbnail">
        }
        else
        {
        <img src="@Model.Image" alt="Game image" class="img-thumbnail">
        }
    </div>

    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <span asp-validation-for="Title" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text">Title*</span>
                    <input asp-for="Title" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="Body" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text">Body*</span>
                    <textarea asp-for="Body" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="Image" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text">Image</span>
                    <input asp-for="Image" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="FoundingDate" class="text-danger"></span>
                <div class="input-group mb-3">
                    <span class="input-group-text">Founding Date*</span>
                    <input asp-for="FoundingDate" class="form-control" />
                </div>
            </div>
            <div class="form-group d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary">Delete</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
