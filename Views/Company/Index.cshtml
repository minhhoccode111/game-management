@model GameManagementMvc.Models.CompanyViewModel

@{
    ViewData["Title"] = "All Companies";
    var companies = Model.Companies!;
    bool hasTitle = !String.IsNullOrEmpty(Model.Title);
}

<h1>
    @if (hasTitle)
    {
        <span>&lt; </span> <a asp-action="Index" class="text-black">Back</a>
    }
    else
    {
    <p>@ViewData["Title"]</p>
    }
</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Company" asp-action="Index" method="get">
    <p>
        Sort by: 
        <select asp-for="Sort">
            <option value="">All</option>
            <option value="name">Name Increase</option>
            <option value="-name">Name Decrease</option>
            <option value="date">Date Increase</option>
            <option value="-date">Date Decrease</option>
        </select>
        Title: <input type="text" asp-for="Title" value="@Model.Title">
        <input type="submit" value="Filter" class="">
    </p>
</form>

<table class="table">
    <!--TODO: check if !companies.Any() and display other <thead> and <tbody> 
with a message instead of straight companies[0] which can throw error when 
companies.Count == 0-->
    <thead class="text-nowrap">
        <tr>
            <th>
                @Html.DisplayNameFor(_ => companies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(_ => companies[0].FoundingDate)
            </th>
            <th>
                Phases
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in companies) {
        var gameCompanies = item.GameCompanies.ToList();
        <tr>
            <td>
                @Html.DisplayFor(_ => item.Title)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(_ => item.FoundingDate)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="">@gameCompanies.Count</a>
            </td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
