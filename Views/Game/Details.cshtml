@model GameManagementMvc.Models.Game

@{
    ViewData["Title"] = "Game Details";
    var game = Model;
}

<h1>@ViewData["Title"]</h1>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<hr>

<div class="container">
    <div class="row justify-content-start">
        <div class="col-4">
            @if (String.IsNullOrEmpty(Model.Image))
            {
                <img src="~/img/default.png" alt="No image" class="img-thumbnail">
            }
            else
            {
                <img src="@Model.Image" alt="Game image" class="img-thumbnail">
            }
        </div>

        <dl class="row col-8">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => Model.Title)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => Model.Title)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => Model.Body)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => Model.Body)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => Model.Rating)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => Model.Rating)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => Model.ReleaseDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(_ => Model.ReleaseDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => Model.Company)
            </dt>
            <dd class = "col-sm-10">
                <a asp-controller="Company" asp-action="Details" asp-route-id="@Model.CompanyId">
                    @Html.DisplayFor(_ => Model.Company!.Title)
                </a>
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(_ => Model.Genres)
            </dt>
            <dd class = "col-sm-10">
                @for (var i = 0; i < Model.Genres!.Count; i++)
                {
                    if (i != 0)
                    {
                        <span> | </span>
                    }
                    <a asp-controller="Genre" asp-action="Details" asp-route-id="@Model.Genres![i].Id">
                        @Html.DisplayFor(_ => Model.Genres![i].Title)
                    </a>
                }
            </dd>
        </dl>
    </div>

    <br>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-primary">Delete</a>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>
